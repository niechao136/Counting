@page "/"
@using Counting.Shared.Services
@inject IAppSetting AppSetting
@inject IAuthService AuthService

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Your api url is <em>@Api</em>
Your pos url is <em>@Pos</em>

@code {
    private string Api => AppSetting.Get("URL:API");
    private string Pos => AppSetting.Get("URL:POS");

    protected override async Task OnInitializedAsync()
    {
        await AuthService.LoginAsync("123");
        Console.WriteLine(await AuthService.GetTokenAsync());
    }

}
