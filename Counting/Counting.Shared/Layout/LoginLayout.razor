@inherits LayoutComponentBase
@inject ApiClient Api

<AicsLayout Footer="@Footer">
  <LayoutBody>
    @Body
  </LayoutBody>
</AicsLayout>

@code {

  private LayoutFooter Footer =>
    new()
    {
      Copyright = "\u00a9 2024 Advantech Intelligent City Services Co., Ltd. (AiCS) All Rights Reserved.",
      ServerVersion = _server,
      WebVersion = "1.0.0.4"
    };

  private string _server = string.Empty;

  protected override async Task OnInitializedAsync()
  {
    var msg = await Api.Client.PostAsync("/api/server/info",
      new StringContent(JsonConvert.SerializeObject(new {})));
    var str = await msg.Content.ReadAsStringAsync();
    var res = JsonConvert.DeserializeObject<JObject>(str);
    _server = res?["version"]?.ToString() ?? string.Empty;
  }

}